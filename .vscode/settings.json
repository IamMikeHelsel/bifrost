{
  // General editor settings
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.organizeImports": "explicit"
  },
  
  // Auto-run pre-commit on save
  "git.postCommitCommand": "none",
  
  // Python settings
  "python.defaultInterpreterPath": "./.venv/bin/python",
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.ruff": "explicit",
      "source.organizeImports.ruff": "explicit"
    }
  },
  
  // Markdown settings
  "[markdown]": {
    "editor.formatOnSave": true,
    "editor.wordWrap": "on",
    "editor.quickSuggestions": {
      "comments": "off",
      "strings": "off",
      "other": "off"
    }
  },
  
  // Markdown linting configuration
  "markdownlint.config": {
    "MD040": false,  // Disable "fenced code blocks should have a language specified"
    "MD024": false,  // Disable "multiple headings with the same content"
    "MD036": false   // Disable "emphasis used instead of a heading"
  },
  
  // TOML settings
  "[toml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  
  // JSON settings
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  
  // YAML settings
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  
  // Rust settings (for future Rust code)
  "[rust]": {
    "editor.formatOnSave": true
  },
  
  // File associations
  "files.associations": {
    "*.toml": "toml",
    "justfile": "makefile",
    "Justfile": "makefile",
    "*.puml": "plantuml",
    "*.plantuml": "plantuml"
  },
  
  // PlantUML settings
  "plantuml.server": "https://www.plantuml.com/plantuml",
  "plantuml.render": "PlantUMLServer",
  "plantuml.exportFormat": "svg",
  "plantuml.exportSubFolder": false,
  "plantuml.exportConcurrency": 3,
  "plantuml.exportOutDir": "docs/diagrams/exports",
  "plantuml.fileExtensions": ".puml,.plantuml,.pu",
  
  // Mermaid settings
  "mermaid-preview.backgroundColor": "white",
  "mermaid-preview.theme": "default",
  
  // Markdown Preview Enhanced settings
  "markdown-preview-enhanced.enableWikiLinkSyntax": true,
  "markdown-preview-enhanced.wikiLinkFileExtension": ".md",
  "markdown-preview-enhanced.enableEmojiSyntax": true,
  "markdown-preview-enhanced.previewTheme": "github-light.css",
  "markdown-preview-enhanced.codeBlockTheme": "default.css",
  
  // Exclude files from search/watch
  "files.exclude": {
    "**/__pycache__": true,
    "**/*.pyc": true,
    "**/node_modules": true,
    "**/.git": true,
    "**/target": true,
    "**/dist": true,
    "**/build": true,
    "**/*.egg-info": true
  },
  
  // Search settings
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "**/target": true,
    "**/dist": true,
    "**/build": true
  }
}