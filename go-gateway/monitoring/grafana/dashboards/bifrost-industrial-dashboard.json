{
  "dashboard": {
    "id": null,
    "title": "Bifrost Industrial Dashboard",
    "tags": ["bifrost", "industrial", "automation"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Device Connection Status",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(bifrost_device_connected)",
            "legendFormat": "Connected Devices"
          }
        ],
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 0},
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto",
          "orientation": "auto",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "textMode": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 1},
                {"color": "green", "value": 5}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Tag Read Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(bifrost_tag_reads_total[5m])",
            "legendFormat": "Tag Reads/sec"
          }
        ],
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 0},
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto",
          "orientation": "auto",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "textMode": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 1000},
                {"color": "red", "value": 5000}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "Data Buffer Usage",
        "type": "gauge",
        "targets": [
          {
            "expr": "bifrost_data_buffer_usage",
            "legendFormat": "Buffer Usage"
          }
        ],
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 0},
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "orientation": "auto",
          "showThresholdLabels": false,
          "showThresholdMarkers": true
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "min": 0,
            "max": 1,
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 0.7},
                {"color": "red", "value": 0.9}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Modbus Operations",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(bifrost_modbus_reads_total[5m])",
            "legendFormat": "Reads/sec"
          },
          {
            "expr": "rate(bifrost_modbus_writes_total[5m])",
            "legendFormat": "Writes/sec"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "yAxes": [
          {
            "label": "Operations/sec",
            "min": 0
          },
          {
            "show": false
          }
        ],
        "xAxis": {
          "show": true
        },
        "tooltip": {
          "shared": true,
          "sort": 0,
          "value_type": "individual"
        }
      },
      {
        "id": 5,
        "title": "Protocol Distribution",
        "type": "piechart",
        "targets": [
          {
            "expr": "count by (protocol) (bifrost_device_connected)",
            "legendFormat": "{{protocol}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "pieType": "pie",
          "tooltip": {
            "mode": "single",
            "sort": "none"
          },
          "legend": {
            "displayMode": "visible",
            "placement": "bottom"
          }
        }
      },
      {
        "id": 6,
        "title": "Network Latency by Device",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(bifrost_network_latency_seconds_bucket[5m]))",
            "legendFormat": "95th percentile"
          },
          {
            "expr": "histogram_quantile(0.50, rate(bifrost_network_latency_seconds_bucket[5m]))",
            "legendFormat": "50th percentile"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "yAxes": [
          {
            "label": "Latency (seconds)",
            "min": 0
          },
          {
            "show": false
          }
        ],
        "xAxis": {
          "show": true
        },
        "tooltip": {
          "shared": true,
          "sort": 0,
          "value_type": "individual"
        }
      },
      {
        "id": 7,
        "title": "Connection Failures",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(bifrost_connections_failed_total[5m])",
            "legendFormat": "Connection Failures/sec"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
        "yAxes": [
          {
            "label": "Failures/sec",
            "min": 0
          },
          {
            "show": false
          }
        ],
        "xAxis": {
          "show": true
        },
        "tooltip": {
          "shared": true,
          "sort": 0,
          "value_type": "individual"
        }
      },
      {
        "id": 8,
        "title": "Top Devices by Activity",
        "type": "table",
        "targets": [
          {
            "expr": "topk(10, rate(bifrost_tag_reads_total[5m]))",
            "legendFormat": "{{device_id}}",
            "format": "table"
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 24},
        "options": {
          "showHeader": true
        },
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "auto",
              "displayMode": "auto"
            }
          }
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": [
        "5s",
        "10s",
        "30s",
        "1m",
        "5m",
        "15m",
        "30m",
        "1h",
        "2h",
        "1d"
      ]
    },
    "refresh": "30s",
    "version": 1
  }
}