module(
    name = "bifrost",
    version = "0.1.0"
)

bazel_dep(name = "rules_rust", version = "0.62.0")
bazel_dep(name = "rules_python", version = "0.40.0")

# Rust toolchain configuration
rust = use_extension("@rules_rust//rust:extensions.bzl", "rust")
rust.toolchain(
    edition = "2021",
    versions = ["1.80.1"]
)
use_repo(rust, "rust_toolchains")
register_toolchains("@rust_toolchains//:all")

# Crate universe configuration
crate = use_extension("@rules_rust//crate_universe:extensions.bzl", "crate")

# Use the Cargo.toml from the native package
crate.from_cargo(
    name = "crates",
    cargo_lockfile = "//packages/bifrost/native:Cargo.lock",
    manifests = ["//packages/bifrost/native:Cargo.toml"]
)

use_repo(crate, "crates")

# Python toolchain configuration
python = use_extension("@rules_python//python/extensions:python.bzl", "python")
python.toolchain(python_version = "3.12") # Consider matching this with your project's Python version if different
use_repo(python, "python_versions")

# Setup pip to parse requirements_lock.txt
pip = use_extension("@rules_python//python/extensions:pip.bzl", "pip")
pip.parse_requirements(
    name = "pip_deps", # This creates a repository named @pip_deps
    requirements_lock = "//:requirements_lock.txt",
)
use_repo(pip, "pip_deps")